source 'https://rubygems.org'

gem 'rails', '3.2.8'
gem 'rake',  '~> 10.0.2'

# Databases
group :development, :test do
  gem 'sqlite3'
end

group :production do
  # Webservers
  gem 'thin'
  gem 'pg'
end

# Rails standard gems
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end 

# Haml, sass
gem 'haml-rails'

# Jquery
gem 'jquery-rails'

# JSON
gem 'json'

# XML parser, builder
gem 'nokogiri'
gem 'builder'

# Authentication
gem 'devise'

# Authorisation
gem 'cancan'