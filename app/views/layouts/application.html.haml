!!!
%html
  %head
    %title Adspire
    = stylesheet_link_tag "application"  
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    %header#header.navbar.navbar-fixed-top
      .navbar-inner
        .container-fluid
          = link_to t(:company), 'http://www.adspire.nl', :class => 'brand'
          .pull-right
            .btn-group
              -if !current_user.blank?
                = link_to current_user.email, edit_user_registration_path, :class => 'btn'
              -else
                = link_to t(:login), new_user_session_path, :class => 'btn'
              = link_to destroy_user_session_path, :method => :delete, :class => 'btn btn-danger' do
                %i.icon-white.icon-off
    #container.container-fluid
      #main.row-fluid
        %nav#nav-container.span2
          %ul#nav.nav.nav-pills.nav-stacked
            %li
              = active_link_to t(:dashboard), root_path, :wrap_tag => :li
            %li
              = active_link_to t(:feeds), feeds_path, :wrap_tag => :li
            %li
              = active_link_to t(:sites), sites_path, :wrap_tag => :li
            %li
              = link_to t(:statistics), 'http://www.google.nl'
            %li
              = link_to t(:payments), 'http://www.google.nl'
        %section#content.span8
          - if notice
            = notice
          = yield
        %aside#notifications.well.span2
          %ul.nav.nav-list
            %li.nav-header
              .dropdown
                = link_to '#', :class => 'settings dropdown-toggle', 'data-toggle' => 'dropdown' do
                  %i.icon-cog
                %ul.dropdown-menu
                  %li
                    = link_to '#' do
                      Toggle notificaties
                  %li
                    = link_to '#' do
                      Notificatie instellingen
              Notificaties
            %li.divider
            %li
              %button.remove
                &times;
              = link_to('http://www.google.nl') do
                %span.muted
                  14:56:
                Er is een nieuwe leed gezet
            %li
              %button.remove
                &times;
              = link_to('http://www.google.nl', :class => 'text-info' ) do
                %span.muted
                  14:56:
                Er is een nieuwe leed gezet
            %li
              %button.remove
                &times;
              = link_to 'http://www.google.nl', :class => 'text-warning' do
                %span.muted
                  14:56:
                Er is een nieuwe leed gezet
            %li
              %button.remove
                &times;
              = link_to 'http://www.google.nl', :class => 'text-error' do
                %span.muted
                  14:56:
                Er is een nieuwe leed gezet
%footer
